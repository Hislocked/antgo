<task>
    <task_name>portrait-challenge</task_name>
    <task_type>SEGMENTATION</task_type>
    <input>
        <source_data>
            <data_set_name>
                portrait
            </data_set_name>
        </source_data>
        <estimation_procedure>
            <type>kfold</type>
	    <parameter>
		<name>kfold</name>
		<value>5</value>
	    </parameter>
	    <parameter>
		<name>bootstrap_counts</name>
		<value>10</value>
	    </parameter>
            <parameter>
                <name>number_repeats</name>
                <value>5</value>
            </parameter>
            <parameter>
                <name>stratified_sampling</name>
                <value>1</value>
            </parameter>
            <parameter>
                <name>split_ratio</name>
                <value>0.8</value>
            </parameter>
        </estimation_procedure>
        <evaluation_measures>
            <evaluation_measure>PixelAccuracy</evaluation_measure>
            <evaluation_measure>MeanAccuracy</evaluation_measure>
            <evaluation_measure>MeanIOU</evaluation_measure>
            <evaluation_measure>FrequencyWeightedIOU</evaluation_measure>
            <evaluation_measure>MeanIOUBoundary</evaluation_measure>
        </evaluation_measures>
        <info>
            <class_label>
                <c>person</c>
            </class_label>
        </info>
    </input>
</task>
